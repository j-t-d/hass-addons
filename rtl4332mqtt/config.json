{
  "name": "RTL_433 to MQTT Bridge",
  "version": "0.4",
  "slug": "rtl4332mqtt",
  "description": "433MHz RF to MQTT Bridge based on RTL_SDR/RTL_433 for RTL2832U based DVB-T USB tuners",
  "url": "https://github.com/reichley/hassio-addons/tree/master/rtl4332mqtt",
  "startup": "before",
  "boot": "auto",
  "map": ["config:rw", "ssl"],
  "devices": ["/dev/bus/usb"],
  "host_network": "False",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "i386"
  ],
  "options":
  {
    "mqtt_host": "<your mqtt broker ip>",
    "mqtt_user": "mosquitto",
    "mqtt_password": "mosquitto",
    "mqtt_topic": "rtl_433",
    "protocol": 40,
    "frequency": 433920000,
    "gain": 0,
    "frequency_offset": 250
  },
  "schema":
  {
    "mqtt_host": "str",
    "mqtt_user": "str",
    "mqtt_password": "str",
    "mqtt_topic": "str",
    "protocol": "int",
    "frequency": "int",
    "gain": "int",
    "frequency_offset": "int"
   }
}
